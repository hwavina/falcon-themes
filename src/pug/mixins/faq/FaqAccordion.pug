mixin FaqAccordionItem(config)
  .card.shadow-none.border-bottom&attributes(attributes)
    .card-header.p-0(id=`faqAccordionHeading${config.id}`)
      button.accordion-button.btn.btn-link.text-decoration-none.d-block.w-100.py-2.px-3.collapsed.border-0.text-start(data-bs-toggle='collapse' data-bs-target=`#collapseFaqAccordion${config.id}` aria-expanded='false' aria-controls=`collapseFaqAccordion${config.id}`)
        span.fas.fa-caret-right.accordion-icon.me-3(data-fa-transform="shrink-2")
        span.fw-medium.font-sans-serif.text-900=config.title
    .collapse.bg-light(id=`collapseFaqAccordion${config.id}` aria-labelledby=`faqAccordionHeading${config.id}` data-parent='#accordionFaq')
      .card-body
        p.ps-4.mb-0=config.description

mixin FaqAccordion
  .card
    .card-body
      #accordionFaq.accordion.border-x.border-top.rounded
        each faq, index in faqs
          +FaqAccordionItem(faq)(class=`${index === 0 ? 'rounded-bottom-0': index === faqs.length - 1 ? '' : 'rounded-0'}`)